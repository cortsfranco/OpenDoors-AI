# Configuración de Base de Datos
DATABASE_URL=postgresql://username:password@localhost:5433/financial_db
PGHOST=localhost
PGPORT=5433
PGUSER=postgres
PGPASSWORD=your_secure_password
PGDATABASE=financial_db

# Configuración de Sesiones
SESSION_SECRET=your_very_secure_session_secret_here_min_32_chars
SESSION_COOKIE_MAX_AGE=86400000

# Configuración de Usuarios Administradores
ADMIN_EMAIL=cortsfranco@hotmail.com
ADMIN_PASSWORD_HASH=$2b$10$your_hashed_password_here

# Configuración de Azure AI
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your_azure_key_here

# Configuración de OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Configuración de Python Backend
PYTHON_BACKEND_URL=http://localhost:8000

# Configuración de Seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Archivos
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configuración de Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
